<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/dialog_gif"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dialog_name_title"
        android:layout_width="43dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Name:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_gif" />

    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_gif"
        app:layout_constraintStart_toEndOf="@id/dialog_name_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dialog_body_part_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body Part:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dialog_body_part"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_name"
        app:layout_constraintStart_toEndOf="@id/dialog_body_part_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dialog_equipment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipment:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_body_part"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dialog_equipment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_body_part"
        app:layout_constraintStart_toEndOf="@id/dialog_equipment_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Add other TextViews for additional information -->

</androidx.constraintlayout.widget.ConstraintLayout>
